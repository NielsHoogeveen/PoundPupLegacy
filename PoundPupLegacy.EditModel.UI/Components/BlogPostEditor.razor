@inherits EntityEditorBase<BlogPost.ToUpdate, BlogPost.ToCreate, Unit>
@if (Model is not null)
{
    <NodeEditor 
        TCreateModel="BlogPost.ToCreate" 
        TUpdateModel="BlogPost.ToUpdate"
        TResolveData="Unit"
        Model="Model"
        OnValidationResult="() => Validate()"
        Title="Edit blogpost">
        <NodeDetailsEditor 
            Model="BlogPost.NodeDetails" 
            OnTitleChanged="OnTitleChanged"
            @ref=nodeDetailsEditor>
            <Top>
                <SimpleTextNodePropertiesEditor Model="BlogPost" @ref=simpleTextNodePropertiesEditor/>
            </Top>
        </NodeDetailsEditor>
    </NodeEditor>
}
@code {
    [Parameter]
    [EditorRequired]
    public BlogPost BlogPost { get; set; } = default!;

    protected override Resolver<BlogPost.ToUpdate, BlogPost.ToCreate, Unit> Model => BlogPost;

    private NodeDetailsEditor? nodeDetailsEditor;
    private SimpleTextNodePropertiesEditor? simpleTextNodePropertiesEditor;

    protected override List<EditorDetailBase?> DetailsEditors => new() {
        nodeDetailsEditor,
        simpleTextNodePropertiesEditor
    };
    protected override Unit ResolveData => Unit.Instance;
}
