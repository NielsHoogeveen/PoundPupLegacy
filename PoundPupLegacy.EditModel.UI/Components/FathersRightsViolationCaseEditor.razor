@inherits EntityEditorBase<FathersRightsViolationCase.ToUpdate, FathersRightsViolationCase.ToCreate, Unit>
@if (Model is not null) {
    <NodeEditor TCreateModel="FathersRightsViolationCase.ToCreate"
                 TUpdateModel="FathersRightsViolationCase.ToUpdate"
                 TResolveData="Unit"
                 Model="Model"
                 OnValidationResult="() => Validate()"
                Title="Edit father's rights violation case">
        <NodeDetailsEditor 
            Model="FathersRightsViolationCase.NodeDetails"
            OnTitleChanged="OnTitleChanged"
            @ref=nodeDetailsEditor>
            <Top>
                <NameableEditor Model="FathersRightsViolationCase.NameableDetails" @ref=nameableEditor/>
            </Top>
            <Middle>
                <CaseDetailsEditor CaseDetails="FathersRightsViolationCase.CaseDetails" @ref=caseDetailsEditor/>
                <TermsEditor Model="FathersRightsViolationCase.NameableDetails" />
            </Middle>
            <Bottom>
                <LocatableDetailsEditor LocatableDetails="FathersRightsViolationCase.LocatableDetails" @ref=locatableDetailsEditor/>
            </Bottom>
        </NodeDetailsEditor>
    </NodeEditor>
}
@code {
    [Parameter]
    [EditorRequired]
    public FathersRightsViolationCase FathersRightsViolationCase { get; set; } = default!;

    protected override Resolver<FathersRightsViolationCase.ToUpdate, FathersRightsViolationCase.ToCreate, Unit> Model => FathersRightsViolationCase;

    private NodeDetailsEditor? nodeDetailsEditor;
    private NameableEditor? nameableEditor;
    private LocatableDetailsEditor? locatableDetailsEditor;
    private CaseDetailsEditor? caseDetailsEditor;

    protected override List<EditorDetailBase?> DetailsEditors => new() {
        nodeDetailsEditor,
        nameableEditor,
        locatableDetailsEditor,
        caseDetailsEditor
    };
    protected override Unit ResolveData => Unit.Instance;
}
