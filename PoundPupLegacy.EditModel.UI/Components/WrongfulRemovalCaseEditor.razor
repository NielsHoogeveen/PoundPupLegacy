@inherits EntityEditorBase<WrongfulRemovalCase.ToUpdate, WrongfulRemovalCase.ToCreate, Unit>
@if (Model is not null) {
    <NodeEditor TCreateModel="WrongfulRemovalCase.ToCreate"
                 TUpdateModel="WrongfulRemovalCase.ToUpdate"
                 TResolveData="Unit"
                 Model="Model"
                 OnValidationResult="() => Validate()"
                 Title="Edit wrongful removal case">
        <NodeDetailsEditor 
            Model="WrongfulRemovalCase.NodeDetails"
            OnTitleChanged="OnTitleChanged"
            @ref=nodeDetailsEditor>
            <Top>
                <NameableEditor Model="WrongfulRemovalCase.NameableDetails" @ref=nameableEditor/>
            </Top>
            <Middle>
                <CaseDetailsEditor CaseDetails="WrongfulRemovalCase.CaseDetails" @ref=caseDetailsEditor/>
            </Middle>
            <Bottom>
                <LocatableDetailsEditor LocatableDetails="WrongfulRemovalCase.LocatableDetails" @ref=locatableDetailsEditor/>
            </Bottom>
        </NodeDetailsEditor>
    </NodeEditor>
}
@code {
    [Parameter]
    [EditorRequired]
    public WrongfulRemovalCase WrongfulRemovalCase { get; set; } = default!;

    protected override Resolver<WrongfulRemovalCase.ToUpdate, WrongfulRemovalCase.ToCreate, Unit> Model => WrongfulRemovalCase;

    private NodeDetailsEditor? nodeDetailsEditor;
    private NameableEditor? nameableEditor;
    private LocatableDetailsEditor? locatableDetailsEditor;
    private CaseDetailsEditor? caseDetailsEditor;

    protected override List<EditorDetailBase?> DetailsEditors => new() {
        nodeDetailsEditor,
        nameableEditor,
        locatableDetailsEditor,
        caseDetailsEditor
    };
    protected override Unit ResolveData => Unit.Instance;
}
