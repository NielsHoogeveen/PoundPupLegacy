@inherits EntityEditorBase<WrongfulRemovalCase.ToUpdate, WrongfulRemovalCase.ToCreate, Unit>
@if (Model is not null) {
    <NodeEditor TCreateModel="WrongfulRemovalCase.ToCreate"
                 TUpdateModel="WrongfulRemovalCase.ToUpdate"
                 TResolveData="Unit"
                 Model="Model"
                 OnValidationResult="() => Validate()"
                 Title="Edit wrongful removal case">
        <NodeDetailsEditor Model="WrongfulRemovalCase.NodeDetails" @ref=nodeDetailsEditor>
            <Top>
                <NameableEditor Model="WrongfulRemovalCase.NameableDetails" />
            </Top>
            <Bottom>
                <LocatableDetailsEditor LocatableDetails="WrongfulRemovalCase.LocatableDetails" />
            </Bottom>
        </NodeDetailsEditor>
    </NodeEditor>
}
@code {
    [Parameter]
    [EditorRequired]
    public WrongfulRemovalCase WrongfulRemovalCase { get; set; } = default!;

    protected override Resolver<WrongfulRemovalCase.ToUpdate, WrongfulRemovalCase.ToCreate, Unit> Model => WrongfulRemovalCase;

    private NodeDetailsEditor? nodeDetailsEditor;

    protected override List<EditorDetailBase?> DetailsEditors => new() {
        nodeDetailsEditor
    };
    protected override Unit ResolveData => Unit.Instance;
}
