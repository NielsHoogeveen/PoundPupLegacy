@inherits EntityEditorBase<Person.ToUpdate, Person.ToCreate, Unit>
@if (Model is not null) {
    <NodeEditor TCreateModel="Person.ToCreate"
                 TUpdateModel="Person.ToUpdate"
                 TResolveData="Unit"
                 Model="Model"
                 OnValidationResult="() => Validate()"
                 Title="Edit person">
        <NodeDetailsEditor 
            Model="Person.NodeDetails"
            OnTitleChanged="OnTitleChanged"
            @ref=nodeDetailsEditor>
            <Top>
                <NameableEditor Model="Person.NameableDetails" @ref=nameableEditor/>
            </Top>
            <Middle>
                <PersonDetailsEditor 
                    PersonDetails="Person.PersonDetails" 
                    Tenants="Person.NodeDetails.Tenants"
                    @ref=personDetailsEditor/>
                <TermsEditor Model="Person.NameableDetails" />
            </Middle>
            <Bottom>
                <LocatableDetailsEditor LocatableDetails="Person.LocatableDetails" @ref=locatableDetailsEditor/>
            </Bottom>
        </NodeDetailsEditor>
    </NodeEditor>
}
@code {
    [Parameter]
    [EditorRequired]
    public Person Person { get; set; } = default!;

    protected override Resolver<Person.ToUpdate, Person.ToCreate, Unit> Model => Person;

    private NodeDetailsEditor? nodeDetailsEditor;
    private NameableEditor? nameableEditor;
    private LocatableDetailsEditor? locatableDetailsEditor;
    private PersonDetailsEditor? personDetailsEditor;

    protected override List<EditorDetailBase?> DetailsEditors => new() {
        nodeDetailsEditor,
        nameableEditor,
        locatableDetailsEditor,
        personDetailsEditor
    };
    protected override Unit ResolveData => Unit.Instance;

}
