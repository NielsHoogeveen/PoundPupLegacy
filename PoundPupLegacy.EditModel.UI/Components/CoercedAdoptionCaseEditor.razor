@inherits EntityEditorBase<CoercedAdoptionCase.ToUpdate, CoercedAdoptionCase.ToCreate, Unit>
@if (Model is not null) {
    <NodeEditor TCreateModel="CoercedAdoptionCase.ToCreate"
                 TUpdateModel="CoercedAdoptionCase.ToUpdate"
                 Model="Model"
                 TResolveData="Unit"
                 OnValidationResult="() => Validate()"
                 Title="Edit coerced adoption case" Map="Map">
        <NodeDetailsEditor Model="CoercedAdoptionCase.NodeDetails" @ref=nodeDetailsEditor>
            <Top>
                <NameableEditor Model="CoercedAdoptionCase.NameableDetails" />
            </Top>
            <Bottom>
                <LocatableDetailsEditor LocatableDetails="CoercedAdoptionCase.LocatableDetails" />
            </Bottom>
        </NodeDetailsEditor>
    </NodeEditor>
}
@code {
    [Parameter]
    [EditorRequired]
    public CoercedAdoptionCase CoercedAdoptionCase { get; set; } = default!;

    protected override Resolver<CoercedAdoptionCase.ToUpdate, CoercedAdoptionCase.ToCreate, Unit> Model => CoercedAdoptionCase;

    private NodeDetailsEditor? nodeDetailsEditor;

    protected override List<EditorDetailBase?> DetailsEditors => new() {
        nodeDetailsEditor
    };
    protected override Unit ResolveData => Unit.Instance;
}
