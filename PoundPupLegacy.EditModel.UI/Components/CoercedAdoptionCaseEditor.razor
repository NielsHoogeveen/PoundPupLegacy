@inherits EntityEditorBase<CoercedAdoptionCase.ToUpdate, CoercedAdoptionCase.ToCreate, Unit>
@if (Model is not null) {
    <NodeEditor TCreateModel="CoercedAdoptionCase.ToCreate"
                 TUpdateModel="CoercedAdoptionCase.ToUpdate"
                 Model="Model"
                 TResolveData="Unit"
                 OnValidationResult="() => Validate()"
                 Title="Edit coerced adoption case">
        <NodeDetailsEditor 
            Model="CoercedAdoptionCase.NodeDetails"
            OnTitleChanged="OnTitleChanged"
            @ref=nodeDetailsEditor>
            <Top>
                <NameableEditor Model="CoercedAdoptionCase.NameableDetails" @ref=nameableEditor/>
            </Top>
            <Middle>
                <CaseDetailsEditor CaseDetails="CoercedAdoptionCase.CaseDetails" @ref=caseDetailsEditor/>
                <TermsEditor Model="CoercedAdoptionCase.NameableDetails" />
            </Middle>

            <Bottom>
                <LocatableDetailsEditor LocatableDetails="CoercedAdoptionCase.LocatableDetails" @ref=locatableDetailsEditor/>
            </Bottom>
        </NodeDetailsEditor>
    </NodeEditor>
}
@code {
    [Parameter]
    [EditorRequired]
    public CoercedAdoptionCase CoercedAdoptionCase { get; set; } = default!;

    protected override Resolver<CoercedAdoptionCase.ToUpdate, CoercedAdoptionCase.ToCreate, Unit> Model => CoercedAdoptionCase;

    private NodeDetailsEditor? nodeDetailsEditor;
    private NameableEditor? nameableEditor;
    private LocatableDetailsEditor? locatableDetailsEditor;
    private CaseDetailsEditor? caseDetailsEditor;


    protected override List<EditorDetailBase?> DetailsEditors => new() {
        nodeDetailsEditor,
        nameableEditor,
        locatableDetailsEditor,
        caseDetailsEditor

    };
    protected override Unit ResolveData => Unit.Instance;
}
