@using PoundPupLegacy.Common
@if (Value.HasValue) {
    <div class="labeled-value labeled-string-value">
        <label>@Label: </label>
        @if(Format == DateTimeFormat.YearMonthAsTextDay) {
            @Value.Value.ToString("yyyy MMMM dd")
        }
    </div>
}
@code {
    [Parameter]
    [EditorRequired]
    public DateTime? Value { get; set; }

    [Parameter]
    [EditorRequired]
    public string Label { get; set; } = string.Empty;

    [Parameter]
    [EditorRequired]
    public DateTimeFormat Format {get; set;} 
}
