@if (Value.HasValue)
{
    <div class="labeled-value labeled-int-value">
        <label>@Label: </label>
        @Value.Value
    </div>
}
@code {
    [Parameter]
    [EditorRequired]
    public required int? Value { get; init; }

    [Parameter]
    [EditorRequired]
    public required string Label { get; init; }

}
