@if (Links.Count() > 1)
{
    <ul>
        @foreach (var link in Links)
        {
            <LinkListElementViewer Link="@link" />
        }
    </ul>
}
@if (Links.Count() == 1) {
    <LinkViewer Link="@Links.First()" />
}
@code {
    [Parameter]
    [EditorRequired]
    public required IEnumerable<Link> Links { get; init; }
}