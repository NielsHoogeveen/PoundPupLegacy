@using PoundPupLegacy.ViewModel.Models
@inherits SimpleTextNodeViewerBase<Document>
<SimpleTextNodeViewer Model="Model" Description="Description">
    <LabeledNullableLinkViewer Value="Model.DocumentType" Label="Document type" />
    <LabeledNullableUriViewer Value="Model.Uri" Label="Source" />
    <LabeledNullableFuzzyDateViewer Value="Model.Published" Label="Publication date" />
</SimpleTextNodeViewer>
@code{
    [Parameter]
    [EditorRequired]
    public override Document Model { get; set; } = default!;

    protected override string ItemDescription => Model.DocumentType is not null
        ? Model.DocumentType.Title
        : "";
}

