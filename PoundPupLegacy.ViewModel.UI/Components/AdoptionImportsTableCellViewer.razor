@code {

    [Parameter]
    [EditorRequired]
    public int LineNumber { get; set; }

    [Parameter]
    [EditorRequired]
    public RowType RowType { get; set; }

    private string OddOrEven => LineNumber % 2 == 0 ? "even" : "odd";

    private string RowTypeString => RowType switch {
        RowType.Sub => "subtotal",
        RowType.Total => "total",
        _ => ""
    };

    protected string TableCellCssClass => $"{OddOrEven} {RowTypeString}";
}
