@if (Model.Any())
{
    <div class="case-parties">
        @foreach(var elem in Model){
            <h3>@elem.PartyTypeName</h3>
            <div class="parties">
                <div class="persons">
                    <label>Persons:</label> @elem.PersonsText 
                    <CommaSeparatedLinkListViewer Model="elem.Persons" />
                </div>
                <div class="organizations">
                    <label>Organizations:</label> @elem.OrganizationsText
                    <CommaSeparatedLinkListViewer Model="elem.Organizations" />
                </div>
            </div>
        }
    </div>
}
@code{
    [Parameter]
    [EditorRequired]
    public required IEnumerable<CaseParties> Model { get; init; }
}
