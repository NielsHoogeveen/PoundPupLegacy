<div class="node-content @ModelClassName">
    @ChildContent
</div>

@code {
    [Parameter]
    [EditorRequired]
    public Node Model { get; set; } = default!;

    [Parameter]
    [EditorRequired]
    public RenderFragment ChildContent { get; set; } = default!;


    private string ModelClassName => Model.HasBeenPublished ? "node" : "node node-unpublished";
}
