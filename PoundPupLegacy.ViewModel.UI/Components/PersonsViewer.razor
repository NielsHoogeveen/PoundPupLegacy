@using Microsoft.Extensions.Primitives
@inherits PagedSearchViewer<PersonListEntry>
@inject IFetchPersonService PersonService
<HeadContentSetter Title=@Title SiteName=@SiteName Description=@Description />
<BreadCrumElementViewer Model="BreadCrumElements" />
<SearchForm PagedSearchListSettings="PagedListSettings"
            OnSearch="OnSearch" />
<ListEntriesViewer 
    ListEntries="ListEntries" 
    PagedListSettings="PagedListSettings" 
    ElementsName="persons" 
    SelectPage="SelectPage" />

@code {
    protected override int PageSize => 50;

    protected override string Title => $"{SiteName} | Persons";

    protected override string Description => "List of all persons mainted on the site";


    protected override void SetPagedListSettings(Dictionary<string, StringValues> parsedQuery)
    {

    }

    protected override async Task<IPagedList<PersonListEntry>> GetListEntriesAsync()
    {
        return await PersonService.FetchPersons(
            userId: UserId, 
            tenantId: TenantId, 
            pageSize: PagedListSettings.PageSize, 
            pageNumber: PagedListSettings.PageNumber, 
            searchTerm: PagedListSettings.SearchTerm, 
            searchOption: PagedListSettings.SearchOption);
    }

}
