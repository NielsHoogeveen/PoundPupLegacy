@inherits Viewer
@inject ICongressionalDataService CongressionalDataService

@if (Model is not null){
    <div class="article-with-comments">
    
        <BreadCrumElementViewer Model="BreadCrumElements"/>
        <UnitedStatesCongressChamberViewer Model="Model.Senate" Label="Senate"/>
        <UnitedStatesCongressChamberViewer Model="Model.House" Label="House of Representatives" />
    </div>
}
@code{
 
    public UnitedStatesCongress? Model { get; set; }

    protected override async Task OnInitializedAsync()
    {
        Model = await CongressionalDataService.GetUnitedStatesCongress();
    }
}