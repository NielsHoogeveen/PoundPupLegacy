@using PoundPupLegacy.ViewModel.Models
@if(Model is not null && Model.Any()){
    <div class="comments">
        @foreach (var comment in @Model)
        {
            <CommentViewer Model="comment" />
        }
    </div>
}
@code{
    [Parameter]
    [EditorRequired]
    public IEnumerable<Comment>? Model { get; set; }
}