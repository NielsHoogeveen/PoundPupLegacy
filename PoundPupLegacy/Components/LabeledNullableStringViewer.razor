@if(Value is not null) {
    <div class="labeled-value labeled-string-value">
        <label>@Label: </label>
        @Value
    </div>
}
@code {
    [Parameter]
    [EditorRequired]
    public required string? Value { get; init; }

    [Parameter]
    [EditorRequired]
    public required string Label { get; init; }

}
