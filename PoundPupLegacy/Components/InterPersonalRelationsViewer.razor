@using PoundPupLegacy.ViewModel.Models
@if (Model is not null && Model.Any())
{
    <h3>Relations to other persons</h3>
    <table style="width: 100%">
        <tr>
            <th>
                Person
            </th>
            <th>
                Relation Type
            </th>
            <th>
                Person
            </th>
            <th>
                Date from
            </th>
            <th>
                Date to
            </th>

        </tr>
        @foreach (var relation in Model.OrderBy(x => x.InterPersonalRelationType.Name).ThenBy(x => x.PersonTo.Name))
        {
            <tr>
                <td>
                    <a href="@relation.PersonTo.Path">@relation.PersonTo.Name</a>
                    
                </td>
                <td>
                    <a href="@relation.InterPersonalRelationType.Path">@relation.InterPersonalRelationType.Name</a>
                    
                </td>
                <td>
                    <a href="@relation.PersonFrom.Path">@relation.PersonFrom.Name</a>
                </td>
                <td>
                    @relation.DateFrom?.ToString("yyyy MMMM dd")
                </td>
                <td>
                    @relation.DateTo?.ToString("yyyy MMMM dd")
                </td>
            </tr>
        }
    </table>
}
@code{
    [Parameter]
    public IEnumerable<InterPersonalRelation>? Model { get; set; }
}
