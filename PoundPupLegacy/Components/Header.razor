@inherits ViewerBase
<header>
    <a href="/" class="logo">
        @if (Logo is not null)
        {
            @((MarkupString)Logo)
        }
    </a>
    <div class="central-header">
        <div style="flex:5">
            <div class="subtitle">
            @if (Subtitle is not null)
            {
                @Subtitle
            }
            </div>
        </div>
        <form action="search" id="search-form" style="flex:2">
            <input type="text" name="search_term" />
            <input type="hidden" name="search_option" value="contains" />
            <input type="submit" value="search" />
        </form>
        @if (User is not null)
        {
            <LoginDisplay />
        }
    </div>
</header>

@code {
    [Parameter]
    [EditorRequired]
    public string? Logo { get; set; } = string.Empty;

    [Parameter]
    [EditorRequired]
    public string? Subtitle { get; set; } = string.Empty;

}
