@page "/discussion/{Id:int}"
@using PoundPupLegacy.Components
@inherits NodeViewerPage<ViewModel.Models.Discussion>
<NodePageViewer Model="Model">
    <NodeHandler Model="@Model">
        <Viewer>
            <DiscussionViewer Model="@Model" />
        </Viewer>
        <Editor>
           <DiscussionUpdater NodeId="@Id"/>
        </Editor>
    </NodeHandler>
</NodePageViewer>
@code {
    [Parameter]
    public override int Id { get; set; }
}
