@using PoundPupLegacy.ViewModel.UI.Services 
@inherits Page
@typeparam TModel where TModel : class, ViewModel.Models.Node
@inject IFetchNodeService<TModel> NodeDataService

@code {

    protected TModel? Model { get; set; }
    private int? previousId = null;

    protected override async Task OnParametersSetAsync()
    {
        if (Id != previousId) {
            Model = await NodeDataService.FetchNode(
                nodeId: Id,
                userId: User.Id,
                tenantId: Tenant.Id);
            StateHasChanged();
            previousId = Id;
        }

    }
}
