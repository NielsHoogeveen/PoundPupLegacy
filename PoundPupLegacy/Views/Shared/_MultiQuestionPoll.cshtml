@using PoundPupLegacy.ViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MultiQuestionPoll

@if(Model.PollStatusId == 0)
{
    <div>
        <label>Status: </label>
        Closed
    </div>
}
@if (Model.PollStatusId == 1)
{
    <div>
        <label>Status: </label>
        Open
    </div>
}
@if(Model.DateTimeClosure > DateTime.Now)
{
    <div>
        <label>Closes: </label>
        @Model.DateTimeClosure.Value.ToString("yyyy MMMM dd")
    </div>
}

<partial name="_PollQuestions" model="@Model.PollQuestions" />
