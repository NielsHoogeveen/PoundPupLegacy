@using PoundPupLegacy.ViewModel;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Organization

<partial name="_OrganizationTypes" model="@Model.OrganizationTypes" />

<div class="text">
    @Html.Raw(Model.Description.Replace(@"href=""http://poundpuplegacy.org", @"href="""))
</div>
<div>
    @Model.WebsiteUrl
</div>
<div>
    @Model.EmailAddress
</div>
<partial name="_PersonOrganizationRelations" model="@Model.PersonOrganizationRelations" />
<partial name="_InterOrganizationalRelations" model="@Model.InterOrganizationalRelations" />

@if (Model.PartyCaseTypes.Any())
{
    <div class="cases">
        @foreach (var partyCaseType in Model.PartyCaseTypes)
        {
            <h3>
                @partyCaseType.CaseTypeName
            </h3>
            <ul>
                @foreach (var partyCase in partyCaseType.PartyCases)
                {
                    <h4>@partyCase.CasePartyTypeName</h4>
                    @foreach (var @cace in partyCase.Cases)
                    {
                        <li><a href="@cace.Path">@cace.Name</a></li>
                    }
                }
            </ul>
        }
    </div>
}



@if (Model.Documents is not null)
{
    <partial name="_Documents" model="@Model.Documents" />
}
@if (Model.Locations is not null)
{
    <partial name="_Locations" model="@Model.Locations" />
}
